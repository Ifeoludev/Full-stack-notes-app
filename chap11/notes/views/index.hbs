<div id="notetitles">
{{#each notelist}}
  <div class="text-center rounded border p-4 block text-xl font-bold">
    {{!-- {{key}}: --}}
    <a
      class="text-gray-900 block w-full"
      href="/notes/view?key={{key}}"
    >{{title}}</a>

  </div>
{{/each}}
</div>
{{> footerjs}}
<script src="/socket.io/socket.io.js"></script>
<script>
document.addEventListener("DOMContentLoaded", function () {
    var socket = io('/home');
    socket.on('notetitles', function(data) {
        var notelist = data.notelist;
        var container = document.getElementById('notetitles');
        container.innerHTML = '';
        
        notelist.forEach(function(notedata) {
            var div = document.createElement('div');
            div.className = "text-center rounded border p-4 block text-xl font-bold";
            
            var a = document.createElement('a');
            a.className = "text-gray-900 block w-full";
            a.href = "/notes/view?key=" + notedata.key;
            a.textContent = notedata.title;
            
            div.appendChild(a);
            container.appendChild(div);
        });
    });
});
</script>