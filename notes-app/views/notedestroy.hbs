<form method='POST'
action='/notes/destroy/confirm'>
<input type='hidden' name='notekey' value='{{#if note}}{{notekey}}{{/if}}'>
<p class="m-1">Delete {{note.title}}?</p>
<br/>
<div class="border inline-flex rounded m-1">
    <input class="px-4 py-2 border-r cursor-pointer " type='submit' value='DELETE' />
    <a  class="px-4 py-2 " href="/notes/view?key={{#if note}}{{notekey}}{{/if}}">Cancel</a>
</div>
</form>